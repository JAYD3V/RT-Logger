{
    "compilerOptions": {
        // Project Structure
        "rootDir": "./source",
        "outDir": "./module",
        "declarationDir": "./typings",

        // ECMAS Support
        "target": "ES2022",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationMap": true,

        // Module Configuration
        "esModuleInterop": true,
        "resolveJsonModule": true,

        // TSC Strictness
        "strict": true,
        "alwaysStrict": true,
        "noUnusedParameters": false,
        "useUnknownInCatchVariables": false // use w/ instanceof
    },

    // Source Control Management
    "exclude": [
        "build/**/*", // Don't try & compile the compilers output silly!
        "res/**/*", // Resources do not need to be compiled
        "*.tmp/", // Local Temporary File (Doesn't Exist in Repo)
        ".vscode/", // VSCode Configuration Dir (Doesn't Exist in Repo)
        "*.js", // JavaScript Files
        "*.mjs", // ESM JavaScript Files
        "*.cjs", // Common JavaScript Files
        "*.cts" // Common TypeScript Files
    ],
    "include": [
        "source/**/*",
        "*.ts", // All TypeScript Files
        "*.mts" // All ESM TypeScript Files
    ]
}
