{
    "compilerOptions": {
        // Project Structure
        "rootDir": "./source",
        "outDir": "./module",
        "declarationDir": "./typings",

        // ECMAS Support
        "target": "ES2022",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationMap": true,

        // Module Configuration
        "esModuleInterop": true,
        "resolveJsonModule": true,

        // TSC Strictness
        "strict": true,
        "alwaysStrict": true,
        "noUnusedParameters": false,
        "useUnknownInCatchVariables": false // use w/ instanceof
    },

    // Source Control Management
    "exclude": ["build", "*.js", "mjs", "*.cjs", "*.cts"],
    "include": ["source/**/*", "*.ts", "*.mts", "source/test/.test.ts", ".tmp/sandbox.ts"]
}
