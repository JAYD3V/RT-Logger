{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TASK: Build Project",
            "type": "shell",
            "command": "tsc",
            "problemMatcher": ["$tsc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "TASK: Execute Main (main.js)",
            "type": "shell",
            "command": "mocha",
            "args": ["./module/main.js"],
            "problemMatcher": "$node-sass",
            "presentation": {
                "reveal": "always",
                "revealProblems": "never",
                "panel": "new"
            }
        },

        {
            "label": "TASK: Execute Testing (all)",
            "type": "shell",
            "command": "mocha",
            "args": ["./module/test"],
            "problemMatcher": "$node-sass",
            "presentation": {
                "reveal": "always",
                "revealProblems": "never",
                "panel": "new"
            }
        },

        {
            "label": "TASK: Exexute Sandbox Test",
            "type": "shell",
            "command": "mocha",
            "args": ["./module/test/sandbox.test.js"],
            "problemMatcher": "$node-sass",
            "presentation": {
                "reveal": "always",
                "revealProblems": "never",
                "panel": "new"
            }
        }
    ]
}
